{
	"compilerOptions": {
		"target": "ES2015",
    "module": "commonjs",
    "outDir": "out",
    "baseUrl": "src/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "types": ["@types/node"],
    "paths": {
      "shared/*": ["shared/*"],
      "transform/*": ["transform/*"],
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
				"exclude": ["**/node_modules/**"]
      }
    ]
  },
  "exclude": ["old/**", "test/**"]
}
