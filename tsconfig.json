{
  "compilerOptions": {
    "target": "ES2019",
    "module": "commonjs",
    "outDir": "out",
    "baseUrl": "src/",
    "strict": true,
    "esModuleInterop": true,
    "skipLibCheck": true,
    "downlevelIteration": true,
    "types": ["@types/node", "@types/ts-expose-internals"],
    "paths": {
      "@transformer/shared/*": ["shared/*"],
      "@transformer/main/*": ["transform/*"],
      "@transformer/viewers/*": ["viewers/*"]
    },
    "plugins": [
      {
        "transform": "typescript-transform-paths",
        "exclude": ["**/node_modules/**"]
      }
    ]
  },
  "exclude": ["old/**", "test/**"]
}
